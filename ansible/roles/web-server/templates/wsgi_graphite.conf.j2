WSGIDaemonProcess _graphite processes=5 threads=5 display-name='%{GROUP}' inactivity-timeout=120 user={{ graphite_user }} group={{ graphite_user }}
WSGIProcessGroup _graphite
WSGIImportScript /usr/share/graphite/graphite-web.wsgi process-group=_graphite application-group=%{GLOBAL}
WSGIScriptAlias / /usr/share/graphite/graphite-web.wsgi
WSGISocketPrefix {{ graphite_var }}/graphite-wsgi

Alias /content/ /usr/share/graphite/webapp/content/

<Location "/content/">
  SetHandler None
</Location>

# This URL is used by the ELB to do healthchecks.  We must disable the graphite app for this URL using SetHandler.
Alias /heartbeat/ "{{ graphite_var }}/dummy-heartbeat-webroot/"
<Location "/heartbeat/">
  SetHandler None
</Location>

ErrorLog /var/log/httpd/graphite-web_error.log

# Possible values include: debug, info, notice, warn, error, crit,
# alert, emerg.
LogLevel info
CustomLog /var/log/httpd/graphite-web_access.log combined

